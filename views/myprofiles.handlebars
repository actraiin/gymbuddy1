                <option value="120-140">120 - 140</option>
              </select>
              <br>
              <label class="modalLabel" for="SkillLevel">Skill Level:</label>
              <div class="btn-group btn-group-justified" data-toggle="buttons">
                <label class="btn btn-default">
                  <input type="radio" name="liftingskill" value="1">1
                </label>
                <label class="btn btn-default">
                  <input type="radio" name="liftingskill" value="2">2
                </label>
                <label class="btn btn-default">
                  <input type="radio" name="liftingskill" value="3">3
                </label>
                <label class="btn btn-default">
                  <input type="radio" name="liftingskill" value="4">4
                </label>
