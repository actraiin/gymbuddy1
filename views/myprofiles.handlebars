	<div class="container">
    
    <h4>Active Profiles</h4>
    <table class="tftable" border="1">
      <tr><th>Activity</th><th>Days</th></tr>
      {{#each profiles}}
        <tr>
          <td>
            SPOTTER<br>
            {{this.spotter.0.range}} (lbs) , {{this.spotter.0.skill}}<br><br>
            RUNNING<br>
            {{this.running.0.distance}} (mi) , {{this.running.0.skill}}
          </td>


